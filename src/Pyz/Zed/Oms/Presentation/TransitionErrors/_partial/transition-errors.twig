{% for omsTransitionErrorTransfer in failedOmsTransitions %}
    {{
    'Error transitioning the Item %idSalesOrderItem% from state %sourceState%%eventSuffix%: %errorMessage%'
    | trans({
        '%idSalesOrderItem%': omsTransitionErrorTransfer.idSalesOrderItem,
        '%sourceState%': omsTransitionErrorTransfer.sourceState,
        '%eventSuffix%': omsTransitionErrorTransfer.event ? ' ( '~ omsTransitionErrorTransfer.event ~' event )' : '',
        '%errorMessage%': omsTransitionErrorTransfer.errorMessage,
    }) }}
{% endfor %}
